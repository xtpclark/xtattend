-- Group: terminal
-- Name:  detail
-- Notes: Used by port

SELECT terminal_id AS id,
       terminal_number, terminal_descrip
FROM cgms.terminal
WHERE (true)
<? if exists('terminal_id') ?>
  AND (terminal_id=<? value('terminal_id') ?>)
<? endif ?>
<? if exists('port_id') ?>
  AND (terminal_port_id=<? value('port_id') ?>)
<? endif ?>

ORDER BY terminal_number;
